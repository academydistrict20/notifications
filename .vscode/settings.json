{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": false,
  "[typescript]": {
    "editor.formatOnSave": false
  },

  "conventionalCommits.scopes": [
    "project",
    "shared",
    "release",
    "client",
    "ui",
    "embed",
    "services",
    "infrastructure",
    "examples",
    "templates",
    "plugins"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/_templates": false,
    "**/coverage": true,
    "**/dist": false
  },

  "jest.showCoverageOnLoad": true
}